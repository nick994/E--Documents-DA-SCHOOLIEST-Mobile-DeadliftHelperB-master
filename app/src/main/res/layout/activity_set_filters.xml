<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mymapapplication.miguel.labrador.com.deadlifthelper.SetFilters">


    <LinearLayout
        android:orientation = "vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum = "27">

        <LinearLayout
            android:orientation = "vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight = "10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Show lifts for:"
                android:id="@+id/UserNameText"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/UserNameText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/UserNameEditText"
                android:paddingBottom="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Or select from a list of names on record:"
                android:id="@+id/ExistingNamesTextView"
                android:paddingTop="10dp"/>

            <ExpandableListView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/ExitingNamesListView" />

        </LinearLayout>

        <LinearLayout
            android:orientation = "horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight = "5"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Weight"
                android:layout_weight="1"
                android:id="@+id/WeightTextView" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/WeightSpinner"
                android:layout_weight="1"
                android:spinnerMode="dropdown" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/UserNameText"
                android:id="@+id/WeightEditText"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="lbs."
                android:layout_weight="1"
                android:id="@+id/lbsTextView" />

        </LinearLayout>

        <LinearLayout
            android:orientation = "vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight = "12"
            android:weightSum="9">

            <LinearLayout
                android:orientation = "horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight = "3"
                android:weightSum="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Date"
                    android:id="@+id/SpecificDateText" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DateSpinner"
                    android:layout_weight = "1"
                    android:spinnerMode="dropdown"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/DateSingleValEditText"
                    android:layout_weight="3.32" />

            </LinearLayout>

            <LinearLayout
                android:orientation = "vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight = "13"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Or select lifts between two dates (inclusive):"
                    android:id="@+id/BetweenText" />

                <LinearLayout
                    android:orientation = "horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight = "0.75"
                    android:weightSum="101">


                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:id="@+id/DateLowerBound"
                        android:layout_weight="50" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="and"
                        android:id="@+id/AndTextView" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:id="@+id/DateUpperBound"
                        android:layout_weight="50"
                        android:gravity = "right"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation = "horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight = "0.75"
                    android:weightSum="101">


                    <Button
                        android:layout_width="169dp"
                        android:layout_height="wrap_content"
                        android:text="Go"
                        android:id="@+id/ButtonGo" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Restore Defaults"
                        android:id="@+id/RestoreDefaultsButton" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</RelativeLayout>
